<Page x:Class="WpfApp2.OpeningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="685" d:DesignWidth="965"
      Title="OpeningPage">

    <Grid>
        <Canvas Name="Huy" Background="White">

            <Rectangle Tag="floor" Height="630" Width="950" Canvas.Left="0" Canvas.Top="20">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="img/mapSmoothed.jpg" />
                </Rectangle.Fill>
            </Rectangle>


            <Button Name="ButtStart" Content="Начать" Height="57" Canvas.Left="414" Canvas.Top="413" Width="122" Click="StartGame" FontFamily="Segoe Script" FontStyle="Italic" FontWeight="Bold" FontSize="24"/>
            <Button Name ="ButtConnect1" Content="Подключиться" Height="57" Canvas.Left="414" Canvas.Top="483" Width="122" Click="ConnectToCompanion" FontFamily="Segoe Script" FontStyle="Italic" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button Name="ButtConnect2" Content="Подключиться" Height="57" Canvas.Left="194" Canvas.Top="232" Width="122" Click="TryToConnect" FontFamily="Segoe Script" FontStyle="Italic" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Name="GoBack" Content="Вернуться" Height="57" Canvas.Left="194" Canvas.Top="314" Width="122" Click="BackToMain" FontFamily="Segoe Script" FontStyle="Italic" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            
            <Label Name="UnrealCyberRoyak" Content="Нереально красивое название для игры будет здесь" Height="94" Canvas.Left="138" Canvas.Top="153" Width="688" FontFamily="Segoe Script" FontWeight="Bold" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center" FontStyle="Italic"/>

            <TextBox Name="TextBoxInfoIP" Canvas.Left="830" TextWrapping="Wrap" Text="TextBox" Canvas.Top="613" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </Grid>
</Page>
